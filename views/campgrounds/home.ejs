<% layout('layout/boilerplate') -%>
<div id="cluster-map" class="my-3"></div>
<hr />

<% if(campgrounds.length) {%>
<h1 class="text-center mb-5">All Campgrounds</h1>

<% } else{%>
<div class="col-md-12 d-flex justify-content-center">
  <a href="/campgrounds/new" class="btn btn-outline-danger btn-lg center my-3"
    >Be the First to make a Campground</a
  >
</div>

<% } %> <% for(let campground of campgrounds) {%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <% if(campground.image.length){ %>
      <img
        src="<%= campground.image[0].url %>"
        class="card-img-top"
        alt="..."
      />
      <% } else {%>
      <img
        src="https://res.cloudinary.com/yelp-camp112/image/upload/v1645864462/YelpCamp/upjepdgwi8sdro3zbl2a.jpg"
        class="card-img-top"
        alt="..."
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <h5 class="card-title"><%= campground.title %></h5>
      <p class="card-text"><%= campground.discription %></p>
      <p class="card-text">
        <small class="text-muted"><%= campground.location %> </small>
      </p>
      <a href="/campgrounds/<%= campground._id %> " class="btn btn-primary mb-3"
        >View <%= campground.title %>
      </a>
    </div>
  </div>
</div>

<% } %>

<script>
  const mbxToken = "<%-process.env.MAPBOX_TOKEN%>";
  const campgrounds = {features: <%-JSON.stringify(campgrounds)%>};
</script>
<script src="/javascript/clusterMap.js"></script>
